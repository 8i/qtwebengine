{
    "module": "webengine",

    "commandline": {
        "options": {
            "proprietary-codecs": "boolean",
            "spellchecker": "boolean"
        }
    },

    "tests" : {
        "ninja": {
            "label": "system ninja",
            "type": "detectNinja"
        }
    },

    "features": {
        "proprietary-codecs": {
            "label": "Proprietary Codecs",
            "autoDetect": false,
            "purpose": "Enables the use of proprietary codecs such as h.264/h.265 and MP3",
            "output": [ "privateFeature" ]
        },
        "spellchecker": {
            "label": "Spellchecker",
            "purpose": "Enables the use of Chromium's spellchecker",
            "output": [ "privateFeature" ]
        },
        "system-ninja": {
            "label": "Using system ninja",
            "condition": "tests.ninja",
            "output": [ "privateFeature" ]
        }
    },

    "summary": [
        {
            "section": "Qt WebEngine",
            "entries": [
                "proprietary-codecs",
                "spellchecker",
                "system-ninja"
            ]
        }
    ]
}
